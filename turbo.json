{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "lint": {},
    "format": {},
    "test": {},
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:e2e": {},
    "test:cov": {},
    "start": {
      "dependsOn": ["build"],
      "cache": false
    }
  }
}
